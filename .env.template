# .env (or .env.development, .env.production)

# --- Default Network ---
VITE_DEFAULT_NETWORK_KEY=ETHEREUM # Key for the default network (e.g., ETHEREUM, POLYGON)

# --- Ethereum Mainnet ---
VITE_ETHEREUM_CHAIN_ID=1
VITE_ETHEREUM_NAME="Ethereum"
VITE_ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_ID" # Needed for Gallery/read-only
VITE_ETHEREUM_EXPLORER_URL="https://etherscan.io"
VITE_ETHEREUM_CONTRACT_ADDRESS="0xYourMainnetContractAddress"
VITE_ETHEREUM_SYMBOL="ETH"
VITE_ETHEREUM_OWNER_ONLY=false # Is this network owner only?

# --- Sepolia Testnet ---
VITE_SEPOLIA_CHAIN_ID=11155111
VITE_SEPOLIA_NAME="Sepolia"
VITE_SEPOLIA_RPC_URL="https://sepolia.infura.io/v3/YOUR_INFURA_ID"
VITE_SEPOLIA_EXPLORER_URL="https://sepolia.etherscan.io"
VITE_SEPOLIA_CONTRACT_ADDRESS="0xYourSepoliaContractAddress" # Or "UNUSED" if not deployed yet
VITE_SEPOLIA_SYMBOL="SepoliaETH"
VITE_SEPOLIA_OWNER_ONLY=true # Set true for owner-only visibility

# --- Polygon PoS ---
VITE_POLYGON_CHAIN_ID=137
VITE_POLYGON_NAME="Polygon"
VITE_POLYGON_RPC_URL="https://polygon-mainnet.infura.io/v3/YOUR_INFURA_ID" # Or public RPC: https://polygon-rpc.com/
VITE_POLYGON_EXPLORER_URL="https://polygonscan.com"
VITE_POLYGON_CONTRACT_ADDRESS="0xYourPolygonContractAddress" # Or "UNUSED"
VITE_POLYGON_SYMBOL="MATIC"
VITE_POLYGON_OWNER_ONLY=false

# --- Polygon Amoy Testnet ---
VITE_POLYGON_AMOY_CHAIN_ID=80002
VITE_POLYGON_AMOY_NAME="Polygon Amoy"
VITE_POLYGON_AMOY_RPC_URL="https://polygon-amoy.infura.io/v3/YOUR_INFURA_ID"
VITE_POLYGON_AMOY_EXPLORER_URL="https://www.oklink.com/amoy" # Amoy explorer
VITE_POLYGON_AMOY_CONTRACT_ADDRESS="UNUSED" # <-- Replace with your deployed address
VITE_POLYGON_AMOY_SYMBOL="MATIC" # Amoy uses MATIC
VITE_POLYGON_AMOY_OWNER_ONLY=true

# --- Base ---
VITE_BASE_CHAIN_ID=8453
VITE_BASE_NAME="Base"
VITE_BASE_RPC_URL="https://mainnet.base.org" # Public RPC
