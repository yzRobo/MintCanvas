VITE_BASE_SEPOLIA_RPC_URL="https://base-sepolia.infura.io/v3/YOUR_INFURA_ID"
VITE_BASE_SEPOLIA_EXPLORER_URL="https://sepolia.basescan.org"
VITE_BASE_SEPOLIA_CONTRACT_ADDRESS="UNUSED" # <-- Replace with your deployed address
VITE_BASE_SEPOLIA_SYMBOL="ETH" # Base Sepolia uses ETH
